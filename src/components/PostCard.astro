---
// src/components/PostCard.astro
const { post } = Astro.props;
---

<article
  class="group h-full flex flex-col border border-slate-200 dark:border-slate-800 rounded-2xl bg-white dark:bg-slate-900 overflow-hidden hover:shadow-lg hover:border-violet-200 dark:hover:border-violet-900/50 transition-all duration-300"
>
  <!-- Preview Image -->
  {post.frontmatter.image && (
    <div class="relative aspect-video">
      <img
        src={post.frontmatter.image}
        alt={`Preview for: ${post.frontmatter.title}`}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        onError={(e) => {
          e.target.src = '/images/placeholder-post.jpg';
        }}
      />
    </div>
  )}

  <div class="p-6 flex-grow flex flex-col">
    <a href={`/blog/${post.slug}`} class="block mb-3">
      <h2 class="text-xl font-bold text-slate-900 dark:text-white group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors">
        {post.frontmatter.title || 'Untitled'}
      </h2>
    </a>

    {post.frontmatter.date && (
      <time class="text-sm text-slate-500 dark:text-slate-400 mb-3">
        {new Date(post.frontmatter.date).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'short',
          day: 'numeric'
        })}
      </time>
    )}

    {post.frontmatter.description && (
      <p class="text-slate-600 dark:text-slate-300 line-clamp-3 flex-grow">
        {post.frontmatter.description}
      </p>
    )}
  </div>

  {post.frontmatter.tags && (
    <div class="px-6 pb-4">
      <div class="flex flex-wrap gap-2">
        {post.frontmatter.tags.slice(0, 3).map((tag) => (
          <span
            key={tag}
            class="text-xs px-2 py-1 bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 rounded"
          >
            {tag}
          </span>
        ))}
      </div>
    </div>
  )}
</article>